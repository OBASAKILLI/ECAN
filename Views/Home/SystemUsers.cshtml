@model General





@using Syncfusion.EJ2
@using Newtonsoft.Json

<link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
<script src="~/Syncfussion/scripts/ej2.min.js"></script>

@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .form-control_custom {
        padding: 6px;
        border-radius: 8px;
        border: solid 1px orange;
        box-shadow: 0 1px 8px 0 #FFC46C;
        color: #178201;
        width: 100%;
    }

        .form-control_custom:focus {
            border: solid 1px transparent;
        }
</style>

<div class="container-fluid">

    <div style="text-align:left;font-family:'Century Gothic';font-size:large;color:#0C0648;font-weight:bold;padding:8px">
        Add new System User
    </div>
    <div class="row">

        <div class="col-md-5">
            <div style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);margin:2px;padding:8px;border-radius:8px">
                <form asp-action="" asp-controller="Home" method="post" enctype="multipart/form-data">
                    <div style="padding:8px;;text-align:center">

                        <img src="~/Icons/user.png" style="max-height:200px" class="img-fluid" />
                    </div>
                    <div class="form-group">

                        <input name="fullname" placeholder="Full Name" required class="form-control_custom" />
                    </div>
                    <div class="form-group">

                        <input name="username" placeholder="Username" required class="form-control_custom" />
                    </div>
                    <div style="margin-bottom:8px" >
                        <div class="padding-top">
                            <ejs-dropdownlist id="Role" name="Role" required  filterBarPlaceholder="Search" allowFiltering="true" filtering="RoleFunction" placeholder="Select a Role" popupHeight="300px" dataSource="@ViewBag.Role">
                                <e-dropdownlist-fields text="Role" value="Role"></e-dropdownlist-fields>
                            </ejs-dropdownlist>

                        </div> 
                        <div class="padding-top">
                            <ejs-dropdownlist id="CenterName" name="CenterName" required  filterBarPlaceholder="Search" allowFiltering="true" filtering="Centers" placeholder="Select a Center" popupHeight="300px" dataSource="@ViewBag.Center">
                                <e-dropdownlist-fields text="CenterName" value="strId"></e-dropdownlist-fields>
                            </ejs-dropdownlist>

                        </div>
                        <script>
                            function RoleFunction(e) {
            var query = new ej.data.Query();
         query = (e.text !== '') ? query.where('Role', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Role)), query);
                            }
                         function Centers(e) {
            var query = new ej.data.Query();
                             query = (e.text !== '') ? query.where('CenterName', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Center)), query);
    }

                        </script>
                    </div>
     
                    <div class="form-group">

                        <input name="Password" placeholder="Password" required class="form-control_custom" />
                    </div>

                    <div class="form-group form-check" hidden>
                        <label class="form-check-label">
                            <input class="form-check-input" />
                        </label>
                    </div>


                    <div class=" text-center" style="text-align:center;margin-top:8px">
                        <div style="margin-top:24px;margin-bottom:24px">
                            <button type="submit" style="color:white;background-color:coral;padding:6px;border:none;border-radius:30px;width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)"> Add New User </button>

                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-7">
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!!..</strong>@TempData["success"]
                </div>
            }
            @if (TempData["Err"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Opps!!..</strong>@TempData["Err"]
                </div>
            }
            <div style="text-align:center">
                <div style="font-size:x-large;color:black;font-family:Calibri">
                    All System Users
                </div>
                <div style="font-size:small;color:gray;font-family:Calibri">
                    List of all Users 
                </div>
            </div>
            <partial name="_Search" />
            @if (Model.Users.Count() != 0)
            {
                <div style="width:100%;overflow-x:auto;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                    <table class=" table-sm table-borderless text-black table-responsive-sm text-black" style="width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                        <tbody id="myUL">
                            @foreach (var item in Model.Users)
                            {
                                var centerName = "--";
                                var center = Model.Centers.FirstOrDefault(k => k.strId == item.CenterId);
                                if (center != null)
                                {
                                    centerName = center.CenterName;
                                }

                                <tr style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);color:black;border-radius:8px;padding:4px;height:auto;margin-top:4px;">

                                    <td style="width:250px;text-align:left">
                                        <b class="text-capitalize">

                                            <div class="media">
                                                <div class="media-left">
                                                    <img src="~/Icons/ProfilePic.png" class="media-object" style="width:30px">

                                                </div>
                                                <div class="media-body">
                                                    <div class="text-capitalize" style="margin-left:8px">
                                                        @item.strName
                                                    </div>

                                                </div>
                                            </div>

                                        </b>

                                    </td>
                                    <td style="min-width:100px">
                                        <div style="font-size:medium;font-family:Calibri">

                                            @item.strUsername
                                        </div>
                                        <div style="font-size:x-small;font-family:Calibri;color:gray">
                                            username
                                        </div>
                                    </td>
                                    <td style="min-width:150px">
                                        <div style="font-size:medium;font-family:Calibri">
                                            @centerName
                                        </div>
                                        <div style="font-size:x-small;font-family:Calibri;color:gray">
                                            Center
                                        </div>
                                    </td>
                                    <td style="min-width:150px">
                                        <div style="font-size:medium;font-family:Calibri">
                                            @item.strRole
                                        </div>
                                        <div style="font-size:x-small;font-family:Calibri;color:gray">
                                            Role
                                        </div>
                                    </td>

                                    <td style="min-width:60px">
                                        <a asp-action="EditSystemUsetr" asp-route-id="@item.strId">
                                            <div style="background-color:coral;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">
                                                <i class="fa fa-pen" aria-hidden="true"></i> <span>Edit</span>
                                            </div>
                                        </a>
                                    </td>
                                    <td style="min-width:90px">
                                        <a asp-action="" data-toggle="modal" data-target="#Delete_@item.strId" style="color:red" asp-route-id="item.strId">
                                            <div style="background-color:palevioletred;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">

                                                <i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span>
                                            </div>
                                        </a>
                                    </td>

                                </tr>



                                <!-- Modal delete -->
                                <div id="Delete_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> Remove System User
                                                </div>

                                            </div>
                                            <div class="modal-body">
                                                <div style="font-size:large;font-weight:bold;text-align:center" class="modal-title">@item.strName</div>

                                                <div class="alert alert-danger">Hey you are about to remove this User from the system.Are you sure you want to continue??</div>
                                            </div>
                                            <form asp-action="DeleteSystemUser" asp-controller="Home">

                                                <input type="hidden" name="id" value="@item.strId" />
                                                <div class="modal-footer">
                                                    <div class=" btn-success btn-sm" data-dismiss="modal">Cancel</div>
                                                    <input type="submit" id="completebutton" value="REMOVE USER" class=" btn-danger btn-sm" />

                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    No User record Found
                </div>
            }


        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>


