@model ECAN_CRF.Models.Schools

@using Syncfusion.EJ2
@using Newtonsoft.Json

<link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
<script src="~/Syncfussion/scripts/ej2.min.js"></script>

@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .form-control_custom {
        padding: 6px;
        border-radius: 8px;
        border: solid 1px orange;
        box-shadow: 0 1px 8px 0 #FFC46C;
        color: #178201;
        width: 100%;
    }

        .form-control_custom:focus {
            border: solid 1px transparent;
        }
</style>

<div class="container-fluid">

    <div style="text-align:left;font-family:'Century Gothic';font-size:large;color:#0C0648;font-weight:bold;padding:8px">
        Add new School
    </div>
    <div class="row">

        <div class="col-md-4">
            <div style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);margin:2px;padding:8px;border-radius:8px">
                <form asp-action="Schools" asp-controller="Home" method="post">
                    <div style="padding:8px;;text-align:center">

                        <img src="~/Icons/school.png" style="max-height:200px" class="img-fluid" />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">

                        <input asp-for="Name" placeholder="school name" class="form-control_custom" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="padding-top">
                        <ejs-dropdownlist id="CenterId" ejs-for="CenterId" required name="CenterId" filterBarPlaceholder="Search" allowFiltering="true" filtering="strSectionfilter" placeholder="Select Center" popupHeight="300px" dataSource="@ViewBag.centersdata">
                            <e-dropdownlist-fields text="CenterName" value="strId"></e-dropdownlist-fields>
                        </ejs-dropdownlist>

                    </div>
                    <script>
     function strSectionfilter(e) {
            var query = new ej.data.Query();
         query = (e.text !== '') ? query.where('CenterName', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.centersdata)), query);
    }

                    </script>
                    
                    <div class="form-group form-check" hidden>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                        </label>
                    </div>





                    <div class=" text-center" style="text-align:center;margin-top:8px">


                        <div style="margin-top:24px;margin-bottom:24px">
                            <button type="submit" style="color:white;background-color:coral;padding:6px;border:none;border-radius:30px;width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)"> Add New School </button>

                        </div>

                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!!..</strong>@TempData["success"]
                </div>
            }
            @if (TempData["Err"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Opps!!..</strong>@TempData["Err"]
                </div>
            }
            <div style="text-align:center">
                <div style="font-size:x-large;color:black;font-family:Calibri">
                    All Schools
                </div>
                <div style="font-size:small;color:gray;font-family:Calibri">
                    List of all schools in ECAN
                </div>
            </div>
            <partial name="_Search" />
            @if (ViewBag.schools.Count != 0)
            {
                <div style="width:100%;overflow-x:auto;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                    <table class=" table-sm table-borderless text-black table-responsive-sm text-black" style="width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                        <tbody id="myUL">
                            @foreach (var item in ViewBag.schools)
                            {

                                <tr style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);color:black;border-radius:8px;padding:4px;height:auto;margin-top:4px;">
                                    <td style="width:250px;text-align:left">
                                        <b class="text-capitalize">

                                            <div style="font-size:large;font-family:Calibri">
                                                @item.Name
                                            </div>
                                            <div style="font-size:x-small;font-family:Calibri;color:gray">
                                                School Name
                                            </div>

                                        </b>

                                    </td>
                                    <td style="min-width:100px">
                                        <div style="font-size:large;font-family:Calibri">
                                            @item.CenterId
                                        </div>
                                        <div style="font-size:x-small;font-family:Calibri;color:gray">
                                            Center
                                        </div>
                                    </td>


                                    <td style="min-width:60px">
                                        <a asp-action="" data-toggle="modal" data-target="#Edit_@item.strId">
                                            <div style="background-color:coral;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">
                                                <i class="fa fa-pen" aria-hidden="true"></i> <span>Edit</span>
                                            </div>
                                        </a>
                                    </td>
                                    <td style="min-width:90px">


                                        <a asp-action="DeleteCenter" data-toggle="modal" data-target="#Delete_@item.strId" style="color:red" asp-route-id="@item.strId">
                                            <div style="background-color:palevioletred;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">

                                                <i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span>
                                            </div>
                                        </a>

                                    </td>

                                </tr>
                                <div id="Edit_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                    <i class="fa fa-pen" aria-hidden="true"></i> Edit School Info
                                                </div>

                                            </div>

                                            <form asp-action="EditSChoolinfo" asp-controller="Home" method="post" style="padding:8px">
                                                <div style="padding:8px">
                                                    <input name="Id" type="hidden" value="@item.strId" />
                                                    <div style="padding:8px;;text-align:center">

                                                        <img src="~/Icons/school.png" style="max-height:200px" class="img-fluid" />
                                                    </div>
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="form-group">

                                                        <input asp-for="Name" name="name" placeholder="school name" value="@item.Name" class="form-control_custom" />
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                    <select class="form-control" asp-for="CenterId">
                                                        @foreach (var itemm in ViewBag.centersdata)
                                                        {
                                                            <option>@itemm.CenterName</option>
                                                        }


                                                    </select>
                                                    @*<div class="padding-top">
                                                        <ejs-dropdownlist id="CenterIdd"  required name="CenterIdd" filterBarPlaceholder="Search" allowFiltering="true" filtering="strSectionfilter" placeholder="Select Center" popupHeight="300px" dataSource="@ViewBag.centersdata">
                                                            <e-dropdownlist-fields text="CenterName" value="strId"></e-dropdownlist-fields>
                                                        </ejs-dropdownlist>

                                                    </div>*@
                                                
                                                    <div class="form-group form-check" hidden>
                                                        <label class="form-check-label">
                                                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                                                        </label>
                                                    </div>
                                                </div>



                                                <div class="modal-footer">
                                                    <div class=" btn-danger btn-sm" data-dismiss="modal">Cancel</div>
                                                    <input type="submit" id="completebutton" value="UPDATE DETAILS " class="btn-success btn-sm " />

                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                                <!-- Modal delete -->
                                <div id="Delete_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> Remove School
                                                </div>

                                            </div>
                                            <div class="modal-body">
                                                <div style="font-size:large;font-weight:bold;text-align:center" class="modal-title">@item.Name</div>

                                                <div class="alert alert-danger">Hey you are about to remove this School from the system.Are you sure you want to continue??</div>
                                            </div>
                                            <form asp-action="DeleteSchool" asp-controller="Home">

                                                <input type="hidden" name="id" value="@item.strId" />
                                                <div class="modal-footer">
                                                    <div class=" btn-success btn-sm" data-dismiss="modal">Cancel</div>
                                                    <input type="submit" id="completebutton" value="REMOVE SCHOOL " class=" btn-danger btn-sm" />

                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    No Registered farmers in the system
                </div>
            }


        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>


