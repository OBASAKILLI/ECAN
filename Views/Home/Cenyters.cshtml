@model ECAN_CRF.Models.Centers



@{
  
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .form-control_custom {
        padding: 6px;
        border-radius: 8px;
        border: solid 1px orange;
        box-shadow: 0 1px 8px 0 #FFC46C;
        color: #178201;
        width: 100%;
    }

        .form-control_custom:focus {
            border: solid 1px transparent;
        }
</style>

<div class="container-fluid">

    <div style="text-align:left;font-family:'Century Gothic';font-size:large;color:#0C0648;font-weight:bold;padding:8px">
        Add new Center
    </div>
    <div class="row">

        <div class="col-md-4">
            <div style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);margin:2px;padding:8px;border-radius:8px">
                <form asp-action="Cenyters" asp-controller="Users" method="post">
                    <div style="padding:8px;;text-align:center">

                        <img src="~/Icons/focus.png" style="max-height:200px" class="img-fluid" />


                    </div>



                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      
                            <input asp-for="strId" hidden class="control_custom" />
                           
                        <div class="form-group">
                           
                            <input asp-for="CenterName" required placeholder="Name" class="form-control_custom" />
                            <span asp-validation-for="CenterName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                           
                            <input asp-for="CenterCode" required placeholder="Code" class="form-control_custom" />
                            <span asp-validation-for="CenterCode" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check hide">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                            </label>
                        </div>
                       
                  




                    <div class=" text-center" style="text-align:center;margin-top:8px">


                        <div style="margin-top:24px;margin-bottom:24px">
                            <button type="submit" style="color:white;background-color:coral;padding:6px;border:none;border-radius:30px;width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)"> Add Center </button>

                        </div>

                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!!..</strong>@TempData["success"]
                </div>
            }
            @if (TempData["Err"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Opps!!..</strong>@TempData["Err"]
                </div>
            }
            <div style="text-align:center">
                <div style="font-size:x-large;color:black;font-family:Calibri">
                    All Centers
                </div>
                <div style="font-size:small;color:gray;font-family:Calibri">
                    List of all Centers in ECAN Foundation
                </div>
            </div>
            <partial name="_Search" />
            @if (ViewBag.centers.Count != 0)
            {
                <div style="width:100%;overflow-x:auto;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                    <table class=" table-sm table-borderless text-black table-responsive-sm text-black" style="width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
                        <tbody id="myUL">
                            @foreach (var item in ViewBag.centers)
                            {

                                <tr style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);color:black;border-radius:8px;padding:4px;height:auto;margin-top:4px;">
                                    <td style="width:250px;text-align:left">
                                        <b class="text-capitalize">

                                            <div style="font-size:large;font-family:Calibri">
                                                @item.CenterName
                                            </div>
                                            <div style="font-size:x-small;font-family:Calibri;color:gray">
                                                Center name
                                            </div>

                                        </b>

                                    </td>
                                    <td style="min-width:100px">
                                        <div style="font-size:large;font-family:Calibri">
                                            @item.CenterCode
                                        </div>
                                        <div style="font-size:x-small;font-family:Calibri;color:gray">
                                            Center Code
                                        </div>
                                    </td>


                                    <td style="min-width:60px">
                                        <a asp-action="" data-toggle="modal" data-target="#Edit_@item.strId">
                                            <div style="background-color:coral;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">
                                                <i class="fa fa-pen" aria-hidden="true"></i> <span>Edit</span>
                                            </div>
                                        </a>
                                    </td>
                                    <td style="min-width:90px">


                                        <a asp-action="DeleteCenter" data-toggle="modal" data-target="#Delete_@item.strId" style="color:red" asp-route-id="@item.strId">
                                            <div style="background-color:palevioletred;color:white;padding:4px;border-radius:30px;text-align:center;margin-top:8px">

                                                <i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span>
                                            </div>
                                        </a>

                                    </td>

                                </tr>
                                <div id="Edit_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                    <i class="fa fa-pen" aria-hidden="true"></i> Edit Center
                                                </div>

                                            </div>
                                            <form asp-action="EditCenter" asp-controller="Home">
                                                <div class="modal-body">
                                                    <input asp-for="strId" value="@item.strId" name="strId" hidden class="control_custom" />

                                                    <div class="form-group">

                                                        <input asp-for="CenterName" value="@item.CenterName" name="name" required placeholder="Name" class="form-control_custom" />
                                                        <span asp-validation-for="CenterName" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">

                                                        <input asp-for="CenterCode" value="@item.CenterCode" name="code" required placeholder="Code" class="form-control_custom" />
                                                        <span asp-validation-for="CenterCode" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <div class=" btn-danger btn-sm" data-dismiss="modal">Cancel</div>
                                                    <input type="submit" id="completebutton" value="UPDATE DETAILS " class="btn-success btn-sm " />

                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                                <!-- Modal delete -->
                                <div id="Delete_@item.strId" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div style="font-size:large;font-weight:bold" class="modal-title text-danger">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> Remove Center
                                                </div>

                                            </div>
                                            <div class="modal-body">
                                                <div style="font-size:large;font-weight:bold;text-align:center" class="modal-title">@item.CenterName</div>

                                                <div class="alert alert-danger">Hey you are about to remove this Center from the system.Are you sure you want to continue??</div>
                                            </div>
                                            <form asp-action="DeleteCenter" asp-controller="Home">
                                                <input type="hidden" name="type" value="user" />
                                                <input type="hidden" name="id" value="@item.strId" />
                                                <div class="modal-footer">
                                                    <div class=" btn-success btn-sm" data-dismiss="modal">Cancel</div>
                                                    <input type="submit" id="completebutton" value="REMOVE CENTER " class=" btn-danger btn-sm" />

                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    No Registered farmers in the system
                </div>
            }


        </div>
    </div>
</div>





