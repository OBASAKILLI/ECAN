@model ECAN_CRF.Models.Studens





@using Syncfusion.EJ2
@using Newtonsoft.Json

<link href="~/Syncfussion/styles/material.css" rel="stylesheet" />
<script src="~/Syncfussion/scripts/ej2.min.js"></script>

@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .form-control_custom {
        padding: 6px;
        border-radius: 8px;
        border: solid 1px orange;
        box-shadow: 0 1px 8px 0 #FFC46C;
        color: #178201;
        width: 100%;
    }

        .form-control_custom:focus {
            border: solid 1px transparent;
        }
</style>

<div class="container-fluid">

    <div style="text-align:left;font-family:'Century Gothic';font-size:large;color:#0C0648;font-weight:bold;padding:8px">
      Edit Student Details
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">


            </div>
            <div class="col-md-5">
                <div style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);margin:2px;padding:8px;border-radius:8px">
                    <form asp-action="StudentsEditInfo" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div style="padding:8px;;text-align:center">
                            <input type="hidden" asp-for="strId" />
                            <img src="@Model.ImageUrl" style="height:70px;width:70px;border-radius:50%" class="img-fluid" />
                            <div style="font-size:small;color:gray">@Model.strName</div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="strName" style="color:gray;font-size:small"></label>
                            <input asp-for="strName" required placeholder="Full Name" class="form-control_custom" />
                            <span asp-validation-for="strName" class="text-danger"></span>
                        </div>

                        <label asp-for="strCenterId" style="color:gray;font-size:small"></label>
                        <input asp-for="strCenterId"  value="" class="form-control_custom" />



                        <div class="container-fluid ">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="padding-top">
                                        <ejs-dropdownlist id="strSchoolId" ejs-for="strSchoolId" required name="strSchoolId" filterBarPlaceholder="Search" allowFiltering="true" filtering="strSectionfilter" placeholder="Select School" popupHeight="300px" dataSource="@ViewBag.schools">
                                            <e-dropdownlist-fields text="Name" value="strId"></e-dropdownlist-fields>
                                        </ejs-dropdownlist>

                                    </div>
                                    <div class="padding-top">
                                        <ejs-dropdownlist id="CenterNamem" ejs-for="strCenterId" required filterBarPlaceholder="Search" allowFiltering="true" filtering="Centers" placeholder="Select a Center" popupHeight="300px" dataSource="@ViewBag.Center">
                                            <e-dropdownlist-fields text="CenterName" value="strId"></e-dropdownlist-fields>
                                        </ejs-dropdownlist>

                                    </div>
                                    <script>
                            function RoleFunction(e) {
            var query = new ej.data.Query();
         query = (e.text !== '') ? query.where('Role', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Role)), query);
                            }
                         function Centers(e) {
            var query = new ej.data.Query();
                             query = (e.text !== '') ? query.where('CenterName', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Center)), query);
    }

                                    </script>
                                </div>
                                <div class="col-sm-6">
                                    <div class="padding-top">
                                        <ejs-dropdownlist id="strSponserId" ejs-for="strSponserId" required name="strSponserId" filterBarPlaceholder="Search" allowFiltering="true" filtering="strSectionfiltersponsor" placeholder="Select a Sponsor" popupHeight="300px" dataSource="@ViewBag.Sponsor">
                                            <e-dropdownlist-fields text="stName" value="strId"></e-dropdownlist-fields>
                                        </ejs-dropdownlist>

                                    </div>
                                    <script>
     function strSectionfiltersponsor(e) {
            var query = new ej.data.Query();
         query = (e.text !== '') ? query.where('stName', 'contains', e.text, true) : query;
            e.updateData(@Html.Raw(JsonConvert.SerializeObject(ViewBag.Sponsor)), query);
    }

                                    </script>
                                </div>
                            </div>
                        </div>

                        <div class="container-fluid mt-2">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">

                                        <input asp-for="strADNo" placeholder="A/No" required class="form-control_custom" />
                                        <span asp-validation-for="strADNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">

                                        <input asp-for="strCgrade_Class" placeholder="Class/Grade" required class="form-control_custom" />
                                        <span asp-validation-for="strCgrade_Class" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group mt-2">

                            <input asp-for="strGuarduianName" required placeholder="Guardian" class="form-control_custom" />
                            <span asp-validation-for="strGuarduianName" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input asp-for="strguardianPhone" required placeholder="guardian phone" class="form-control_custom" />
                            <span asp-validation-for="strguardianPhone" class="text-danger"></span>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="strADMDate" class="control-label"></label>
                                        <input asp-for="strADMDate" type="date" required class="form-control_custom" />
                                        <span asp-validation-for="strADMDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="strDateOfBirth" class="control-label"></label>
                                        <input asp-for="strDateOfBirth" type="date" required class="form-control_custom" />
                                        <span asp-validation-for="strDateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="strFeePaid" class="control-label"></label>
                                        <input asp-for="strFeePaid" type="date" required class="form-control_custom" />
                                        <span asp-validation-for="strFeePaid" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group form-check" hidden>
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="isDeleted" /> @Html.DisplayNameFor(model => model.isDeleted)
                            </label>
                        </div>
                        <div class="form-group">

                            <input asp-for="ImageFile" accept="images/*" required class="form-control_custom" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>



                        <div class=" text-center" style="text-align:center;margin-top:8px">
                            <div style="margin-top:24px;margin-bottom:24px">
                                <button type="submit" style="color:white;background-color:coral;padding:6px;border:none;border-radius:30px;width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)"> Save Changes  </button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-2">


            </div>
        </div>
    </div>
</div>

<ejs-scripts></ejs-scripts>


